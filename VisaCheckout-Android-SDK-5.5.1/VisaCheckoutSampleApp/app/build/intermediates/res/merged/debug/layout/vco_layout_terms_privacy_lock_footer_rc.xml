<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_visa_checkout_rl_terms_privacy_container_rc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/com_visa_checkout_rlLinkContainer_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/com_visa_checkout_rlLinkContainer_rc_minus_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_below="@+id/com_visa_checkout_v_footer_divider_rc">

            <ImageView
                android:id="@+id/com_visa_checkout_iv_terms_privacy_lock_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/com_visa_checkout_thirty_px"
                android:layout_marginLeft="@dimen/com_visa_checkout_layout_margin_left_right"
                android:layout_marginTop="@dimen/com_visa_checkout_thirty_px"
                android:adjustViewBounds="true"
                android:contentDescription="@string/vco_common_accessibility_secure_lock"
                android:maxHeight="@dimen/com_visa_checkout_pl_forty_five_px"
                android:maxWidth="@dimen/com_visa_checkout_pl_thirty_five_px"
                android:minHeight="@dimen/com_visa_checkout_pl_forty_five_px"
                android:minWidth="@dimen/com_visa_checkout_pl_thirty_five_px"
                android:scaleType="fitXY"
                android:src="@drawable/com_visa_checkout_ic_lock" />

            <TextView
                android:id="@+id/com_visa_checkout_tv_terms_link_rc"
                style="@style/com_visa_checkout_VisaFooterLinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/com_visa_checkout_iv_terms_privacy_lock_rc"
                android:contentDescription="@string/vco_common_label_termsContentDescription"
                android:text="@string/vco_common_label_terms" />

            <TextView
                android:id="@+id/com_visa_checkout_tv_privacy_link_rc"
                style="@style/com_visa_checkout_VisaFooterLinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/com_visa_checkout_tv_terms_link_rc"
                android:contentDescription="@string/vco_common_label_privacyContentDescription"
                android:text="@string/vco_common_label_privacy" />
        </RelativeLayout>


        <View
            android:id="@+id/com_visa_checkout_v_footer_divider_rc"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/com_visa_checkout_footer_divider_width"
            android:layout_alignParentTop="true"
            android:background="@color/com_visa_checkout_footer_divider_color" />

        <View
            android:id="@+id/com_visa_checkout_v_footer_divider_rc_bottom"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/com_visa_checkout_footer_divider_width"
            android:layout_below="@id/com_visa_checkout_rlLinkContainer_rc_minus_divider"
            android:background="@color/com_visa_checkout_footer_divider_color" />

    </RelativeLayout>

</RelativeLayout>