<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vco_color_white"
    android:orientation="vertical">
  <FrameLayout
      android:id="@+id/vco_rnc_fl_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/vco_rnc_ll_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">
      <RelativeLayout
          android:id="@+id/vco_rnc_ll_email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginRight="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="20dp">

        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_rnc_tv_email"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_toLeftOf="@+id/vco_rnc_tv_notyou"
            android:layout_weight="0.8"
            app:font="@string/font_open_sans_regular"
            style="@style/text.medium.midblue"
            />

        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_rnc_tv_notyou"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:text="@string/vco_rc_label_not_you"
            app:font="@string/font_open_sans_semi_bold"
            style="@style/text.small.trueblue"
            />
      </RelativeLayout>
      <View
          android:id="@+id/vco_rnc_view_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:background="@color/vco_color_lavender_gray"
          />

      <RelativeLayout
          android:id="@+id/vco_rnc_rl_card_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="20dp"
          android:layout_marginTop="20dp"
          android:paddingLeft="16.0dp"
          android:paddingRight="16.0dp">

        <ImageView
            android:id="@+id/vco_rnc_iv_card"
            android:layout_width="60dp"
            android:layout_height="37.73dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/com_visa_checkout_card_art_default"
            />

        <LinearLayout
            android:id="@+id/vco_rnc_ll_card_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/vco_rnc_tv_change_card"
            android:layout_toRightOf="@+id/vco_rnc_tv_delivery"
            android:importantForAccessibility="no"
            android:orientation="vertical"
            android:paddingRight="16dp">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_rnc_tv_my_card"
              android:ellipsize="end"
              android:importantForAccessibility="no"
              android:maxLines="1"
              android:visibility="visible"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"/>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
            <ImageView
                android:id="@+id/vco_rnc_iv_card_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="no"
                />

            <com.visa.checkout.widget.VisaTextView
                android:id="@+id/vco_rnc_tv_card_details"
                android:layout_marginLeft="2dp"
                android:importantForAccessibility="no"
                android:maxLines="1"
                app:font="@string/font_open_sans_regular"
                style="@style/text.medium.midblue"/>
          </LinearLayout>

        </LinearLayout>

        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_rnc_tv_change_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:accessibilityTraversalAfter="@id/vco_rnc_iv_card"
            android:clickable="true"
            android:contentDescription="@string/vco_rnc_accesibility_change_card"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:text="@string/vco_rc_label_change"
            app:font="@string/font_open_sans_semi_bold"
            style="@style/text.small.trueblue"
            />

        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_rnc_tv_delivery"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/vco_rnc_iv_card"
            android:layout_marginTop="20dp"
            android:minWidth="60dp"
            android:text="@string/vco_rc_label_delivery"
            app:font="@string/font_open_sans_semi_bold"
            style="@style/text.medium.midblue"
            />

        <LinearLayout
            android:id="@+id/vco_rnc_ll_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vco_rnc_tv_delivery"
            android:layout_below="@+id/vco_rnc_ll_card_info"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@+id/vco_rnc_tv_change_add"
            android:layout_toRightOf="@+id/vco_rnc_tv_delivery"
            android:importantForAccessibility="no"
            android:orientation="vertical"
            android:paddingRight="16dp">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_rnc_tv_name"
              android:ellipsize="end"
              android:importantForAccessibility="no"
              android:maxLines="1"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"
              />

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_rnc_tv_address_line1"
              android:ellipsize="end"
              android:importantForAccessibility="no"
              android:maxLines="1"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"/>

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_rnc_tv_address_line2"
              android:ellipsize="end"
              android:importantForAccessibility="no"
              android:maxLines="1"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"/>

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_rnc_tv_address_line3"
              android:ellipsize="end"
              android:importantForAccessibility="no"
              android:maxLines="1"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"/>

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_rnc_tv_address_line4"
              android:ellipsize="end"
              android:importantForAccessibility="no"
              android:maxLines="1"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"/>
        </LinearLayout>

        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_rnc_tv_change_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/vco_rnc_iv_card"
            android:layout_marginTop="10dp"
            android:accessibilityTraversalAfter="@id/vco_rnc_tv_delivery"
            android:clickable="true"
            android:contentDescription="@string/vco_rnc_accesibility_change_address"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:paddingBottom="10dp"
            android:paddingTop="13dp"
            android:text="@string/vco_rc_label_change"
            app:font="@string/font_open_sans_semi_bold"
            style="@style/text.small.trueblue"/>
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="60dp">
        <com.visa.checkout.widget.VisaButton
            android:id="@+id/vco_rc_btn_continue"
            android:layout_alignParentBottom="true"
            android:textAllCaps="true"
            app:font="@string/font_open_sans_bold"
            style="@style/btn.primary"
            />
        <com.visa.checkout.widget.progressbar.CircularLayout
            android:id="@+id/vco_circularLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">
        </com.visa.checkout.widget.progressbar.CircularLayout>
        <com.visa.checkout.widget.progressbar.VCOProgressSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
      </RelativeLayout>

    </LinearLayout>

    <com.visa.checkout.widget.ExpandableHeader
        android:id="@+id/vco_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vco_color_midnight_blue"/>
  </FrameLayout>
</LinearLayout>
