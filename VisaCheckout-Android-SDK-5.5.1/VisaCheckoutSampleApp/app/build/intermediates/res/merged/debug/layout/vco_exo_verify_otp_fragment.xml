<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vco_color_white"
    android:orientation="vertical">
  <FrameLayout
      android:id="@+id/vco_rnc_fl_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <com.visa.checkout.widget.ExpandableHeader
        android:id="@+id/vco_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vco_color_midnight_blue"/>
    <LinearLayout
        android:id="@+id/vco_otp_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">
      <RelativeLayout
          android:id="@+id/vco_otp_header"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16.0dp"
          android:layout_marginRight="16.0dp"
          android:layout_marginTop="24dp"
          android:visibility="visible">
        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_otp_tv_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:text="@string/vco_otp_label_header"
            android:textSize="20sp"
            app:font="@string/font_open_sans_regular"
            style="@style/text.Xlarge.midblue"/>

        <RelativeLayout
            android:id="@+id/did_not_receive_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vco_otp_tv_email"
            android:gravity="center_horizontal">
          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_otp_did_not_receive_email"
              android:importantForAccessibility="no"
              android:text="@string/vco_otp_label_not_receive_email"
              android:textSize="14sp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.medium.midblue"/>
          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/vco_otp_tv_Resend"
              android:layout_centerHorizontal="true"
              android:layout_marginLeft="4dp"
              android:layout_toRightOf="@+id/vco_otp_did_not_receive_email"
              android:clickable="true"
              android:contentDescription="@string/vco_accessibility_label_receive_email"
              android:text="@string/vco_otp_label_resend"
              android:textSize="14sp"
              app:font="@string/font_open_sans_semi_bold"
              style="@style/text.small.trueblue"/>
        </RelativeLayout>
        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_otp_tv_email"
            android:layout_below="@+id/vco_otp_tv_title"
            android:layout_centerHorizontal="true"
            android:importantForAccessibility="no"
            android:text="@string/vco_otp_label_receive_email"
            android:textSize="14sp"
            app:font="@string/font_open_sans_regular"
            style="@style/text.medium.midblue"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/vco_otp_passcode_info"
          android:layout_width="match_parent"
          android:layout_height="32dp"
          android:layout_marginLeft="28dp">

        <ImageView
            android:id="@+id/erroricon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_inline_error_icon"
            android:visibility="gone"/>


        <com.visa.checkout.widget.VisaTextView
            android:id="@+id/vco_tv_otp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/erroricon"
            android:importantForAccessibility="no"
            android:inputType="number"
            android:maxLines="1"
            android:text="@string/vco_otp_hint_passCode"
            android:textSize="12sp"
            app:font="@string/font_open_sans_semi_bold"
            style="@style/text.small.trueblue">
        </com.visa.checkout.widget.VisaTextView>
      </RelativeLayout>
      <EditText
          android:id="@+id/met1"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:inputType="number"
          android:maxLength="6"
          android:maxLines="1"
          android:visibility="visible"
          style="@style/text.Xlarge.midblue"/>
      <LinearLayout
          android:id="@+id/vco_otp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="28dp"
          android:layout_marginRight="28dp"
          android:layout_weight="1"
          android:contentDescription="@string/vco_accessibility_hint_passCode"
          android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/ed1"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:gravity="center"
              android:hint="@string/vco_otp_hint_asterisk"
              android:maxLength="1"
              android:maxLines="1"
              android:textSize="24dp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.Xlarge.midblue"/>

          <View
              android:id="@+id/vco_otp_line1"
              android:layout_width="wrap_content"
              android:layout_height="2.5dp"
              android:layout_below="@id/ed1"
              android:background="@color/vco_color_lavender_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/ed2"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:gravity="center"
              android:hint="@string/vco_otp_hint_asterisk"
              android:maxLength="1"
              android:maxLines="1"
              android:textSize="24dp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.Xlarge.midblue"/>

          <View
              android:id="@+id/vco_otp_line2"
              android:layout_width="wrap_content"
              android:layout_height="2.5dp"
              android:layout_below="@id/ed2"
              android:background="@color/vco_color_lavender_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/ed3"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:gravity="center"
              android:hint="@string/vco_otp_hint_asterisk"
              android:maxLength="1"
              android:maxLines="1"
              android:textSize="24dp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.Xlarge.midblue"/>

          <View
              android:id="@+id/vco_otp_line3"
              android:layout_width="wrap_content"
              android:layout_height="2.5dp"
              android:layout_below="@id/ed3"
              android:background="@color/vco_color_lavender_gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/ed4"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:gravity="center"
              android:hint="@string/vco_otp_hint_asterisk"
              android:maxLength="1"
              android:maxLines="1"
              android:textSize="24dp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.Xlarge.midblue"/>

          <View
              android:id="@+id/vco_otp_line4"
              android:layout_width="wrap_content"
              android:layout_height="2.5dp"
              android:layout_below="@id/ed4"
              android:background="@color/vco_color_lavender_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/ed5"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:gravity="center"
              android:hint="@string/vco_otp_hint_asterisk"
              android:maxLength="1"
              android:maxLines="1"
              android:textSize="24dp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.Xlarge.midblue"/>

          <View
              android:id="@+id/vco_otp_line5"
              android:layout_width="wrap_content"
              android:layout_height="2.5dp"
              android:layout_below="@id/ed5"
              android:background="@color/vco_color_lavender_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

          <com.visa.checkout.widget.VisaTextView
              android:id="@+id/ed6"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:gravity="center"
              android:hint="@string/vco_otp_hint_asterisk"
              android:maxLength="1"
              android:maxLines="1"
              android:textSize="24dp"
              app:font="@string/font_open_sans_regular"
              style="@style/text.Xlarge.midblue"/>

          <View
              android:id="@+id/vco_otp_line6"
              android:layout_width="wrap_content"
              android:layout_height="2.5dp"
              android:layout_below="@id/ed6"
              android:background="@color/vco_color_lavender_gray"/>
        </RelativeLayout>
      </LinearLayout>
      <RelativeLayout
          android:id="@+id/vco_otp_btn"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginTop="24dp">
        <com.visa.checkout.widget.VisaButton
            android:id="@+id/vco_otp_btn_continue"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/vco_accessibility_confirm_code"
            android:text="@string/vco_otp_btn_confirmCode"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:font="@string/font_open_sans_bold"
            style="@style/btn.primary"/>
        <com.visa.checkout.widget.progressbar.CircularLayout
            android:id="@+id/vco_circularLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"/>
        <com.visa.checkout.widget.progressbar.VCOProgressSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
      </RelativeLayout>
    </LinearLayout>
  </FrameLayout>
</LinearLayout>
