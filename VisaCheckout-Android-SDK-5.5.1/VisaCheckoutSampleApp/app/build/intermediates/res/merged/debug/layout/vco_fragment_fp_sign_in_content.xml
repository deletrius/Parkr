<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vco_finger_print_content"
    android:layout_width="match_parent"
    android:layout_height="263dp"
    android:background="@color/com_visa_checkout_exo_white_link"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/fingerprint_anim_drawable"
      android:layout_width="62dp"
      android:layout_height="62dp"
      android:layout_gravity="center_horizontal"
      android:layout_margin="20dp"
      android:background="@drawable/vco_animation_list_finger_print"
      android:contentDescription="@string/vco_fp_accesibility_fingerprint_image"
      android:scaleType="center"/>
  <com.visa.checkout.widget.VisaTextView
      android:id="@+id/vco_fp_session_expiry_title"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dp"
      android:gravity="center"
      android:text="@string/vco_common_label_confirmFingerprintNow"
      android:textColor="@color/vco_color_midnight_blue"
      android:visibility="gone"
      app:font="@string/font_open_sans_semi_bold"
      style="@style/text.very.large"/>

  <com.visa.checkout.widget.VisaTextView
      android:id="@+id/vco_fp_note"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dp"
      android:gravity="center"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:text="@string/vco_common_label_confirmFingerprintNow"
      android:textColor="@color/vco_color_midnight_blue"
      app:font="@string/font_open_sans_semi_bold"
      style="@style/text.large"/>

  <com.visa.checkout.widget.VisaTextView
      android:id="@+id/vco_et_user_email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:gravity="center"
      android:text=""
      android:textColor="@color/vco_color_midnight_blue"
      app:font="@string/font_open_sans_semi_bold"
      style="@style/text.medium"/>

  <LinearLayout
      android:id="@+id/linebreak"
      android:layout_width="match_parent"

      android:layout_height="wrap_content"
      android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@color/vco_color_lavender_gray"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/vco_fp_menu"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:background="@color/vco_color_white"
      android:orientation="horizontal">

    <com.visa.checkout.widget.VisaButton
        android:id="@+id/vco_fp_btn_passwrd"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:layout_weight="0.5"
        android:background="@color/vco_color_white"
        android:contentDescription="@string/vco_signin_accesibility_use_password"
        android:text="@string/vco_fp_btn_use_password"
        android:textColor="@color/vco_color_true_blue"
        android:textStyle="bold"
        app:font="@string/font_open_sans_semi_bold"/>

    <com.visa.checkout.widget.VisaButton
        android:id="@+id/vco_fp_btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:layout_weight="0.5"
        android:background="@color/vco_color_white"
        android:text="@string/vco_fp_btn_cancel"
        android:textColor="@color/vco_color_true_blue"
        android:textStyle="bold"
        app:font="@string/font_open_sans_semi_bold"/>
  </LinearLayout>


</LinearLayout>
