<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vco_color_white"
    android:orientation="vertical">

  <FrameLayout
      android:id="@+id/vco_exo_otp_newcode_fl_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/vco_exo_otp_newcode_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="22dp"
          android:layout_marginRight="22dp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/com_visa_checkout_tv_get_new_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.5dp"
            android:gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:text="@string/vco_exo_otp_label_new_getVerificationCode"
            app:font="@string/font_open_sans_regular"
            style="@style/text.Xlarge.midblue"/>

        <TextView
            android:id="@+id/com_visa_checkout_tv_get_new_verification_code_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.5dp"
            android:gravity="center_horizontal"
            android:text="@string/vco_exo_otp_label_newVerificationCodeInfo"
            app:font="@string/font_open_sans_regular"
            style="@style/text.medium.midblue"/>


        <TextView
            android:id="@+id/com_visa_checkout_tv_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:importantForAccessibility="no"
            app:font="@string/font_open_sans_semi_bold"
            style="@style/text.Xlarge.midblue"/>

      </LinearLayout>

      <RelativeLayout
          android:id="@+id/vco_exo_otp_newcode_rl_btn"
          android:layout_width="match_parent"
          android:layout_height="60dp">

        <com.visa.checkout.widget.VisaButton
            android:id="@+id/com_exo_visa_checkout_bt_send_new_code"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/vco_accessibility_label_send_newcode"
            android:text="@string/vco_exo_otp_label_send_newcode"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:font="@string/font_open_sans_bold"
            style="@style/btn.primary"/>

        <com.visa.checkout.widget.progressbar.CircularLayout
            android:id="@+id/vco_circularLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"/>
        <com.visa.checkout.widget.progressbar.VCOProgressSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

      </RelativeLayout>
    </LinearLayout>
    <com.visa.checkout.widget.ExpandableHeader
        android:id="@+id/vco_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vco_color_midnight_blue"/>

  </FrameLayout>
</LinearLayout>




